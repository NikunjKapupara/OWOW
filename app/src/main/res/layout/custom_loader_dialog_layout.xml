<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded_white_bg"
            android:layout_marginStart="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="30dp"
            android:layout_height="90dp">


            <pl.droidsonroids.gif.GifImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/progressLoader"
                android:layout_marginStart="@dimen/general_app_margin"
                android:src="@drawable/ic_loader_gif" />

            <TextView
                android:id="@+id/textViewLoadingMSG"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/general_app_margin"
                android:layout_marginEnd="@dimen/general_app_margin"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/loader_message"
                android:textColor="@android:color/black" />

        </LinearLayout>
</LinearLayout>