    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base" />
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowSoftInputMode">adjustPan|adjustResize</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--LOADER DIALOG STYLE-->
    <!--DIALOG ANIMATION ::::::-->
    <style name="LoaderDiaogAnim">
        <item name="android:windowEnterAnimation">@anim/drop_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/drop_out_to_bottom</item>
    </style>



    <!-- RECYCLER VIEW :  ROW ITEM STYLE-->
    <style name="style_list_row_mainOuterConatiner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded_white_bg_withborder</item>
        <item name="android:paddingStart">@dimen/general_app_margin</item>
        <item name="android:paddingEnd">@dimen/general_app_margin</item>
        <item name="android:orientation">vertical</item>
    </style>



    <!--GET SPONSORE BY SEARCH CRITERIA IN ENTRY/EXIT REPORT PRINT-->
    <style name="style_title_header_sponsorlist_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_field_value_sponsorlist_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
